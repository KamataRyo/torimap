@import './themes/default.scss';
@import './themes/<%= theme %>.scss';

@import './scss/slideout.scss';
@import './scss/app.scss';
@import './scss/menu.scss';
@import './scss/panel.scss';

// customize
.home-contents {
  h1 {
    font-weight: bold;
    margin-top: 50px;
    text-align: center;
  }
  p {
    text-align: center;
  }
  .wrap img {
    max-width: 320px;
    margin: 50px auto;
  }
  .cc-display {
    margin: auto;
  }
}

table {
    border-collapse: collapse;
    text-align: left;
    line-height: 1.5;
    border-top: 1px solid $main-color-border;
    border-left: 3px solid $header-icon-color-fg;
}
table th {
    width: 80px;
    padding: 10px;
    font-weight: bold;
    vertical-align: top;
    color: $header-icon-color-fg;
    border-right: 1px solid $main-color-border;
    border-bottom: 1px solid $main-color-border;
}
table td {
    width: 150px;
    padding: 10px;
    vertical-align: top;
    border-right: 1px solid $main-color-border;
    border-bottom: 1px solid $main-color-border;
}

.thumbnail-wrap {
  margin: 20px;
}
